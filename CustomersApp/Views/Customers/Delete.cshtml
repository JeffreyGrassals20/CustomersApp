@{
}
@model Customers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/CreateCustomers.css" />
</head>
<body>
    <header>
        <div>
            <h1>Delete Customer</h1>
        </div>
    </header>

    <div class="formContainer" id="DeleteCustomers">
        <form asp-controller="Customers" asp-action="Delete">

            <label asp-for="DocumentID">Document ID</label>
            <input asp-for="DocumentID" placeholder="Document ID..">
            @Html.ValidationMessageFor(d => d.DocumentID, "", new { @class = "text-danger" }) <br />

            <input type="submit" value="Submit">

        </form>
    </div>

</body>
</html>


@section Scripts{ 

    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
}}
